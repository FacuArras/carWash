generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id            String         @id @default(uuid()) @map("_id")
  name          String
  password      String
  userId        String
  createdAt     DateTime       @default(now())
  vehicles      Vehicle[]      @relation("ClientToVehicle")
  configuration Configuration? @relation("ClientToConfig")
}

model Vehicle {
  id            String    @id @default(uuid()) @map("_id")
  vehicle       String
  licensePlate  String
  color         String
  phoneNumber   String
  price         Float
  typeOfCarWash String
  brand         String
  observations  String?
  washed        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  washedAt      DateTime?
  updatedAt     DateTime  @updatedAt
  updatedValue  Json?
  client        Client    @relation("ClientToVehicle", fields: [clientId], references: [id])
  clientId      String

  @@index([licensePlate])
}

model Configuration {
  id            String   @id @default(uuid()) @map("_id")
  vehicle       String[] @default(["auto", "moto"])
  typeOfCarWash String[] @default(["completo", "interior", "solo exterior"])
  message       String   @default("Tu 'vehículo' patente 'patente' de color 'color', ya está listo para que lo retires!")
  Client        Client?  @relation("ClientToConfig", fields: [clientId], references: [id])
  clientId      String   @unique
}
