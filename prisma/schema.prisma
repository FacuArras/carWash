generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id            String   @id @default(uuid()) @map("_id")
  vehicle       String
  licensePlate  String
  color         String
  phoneNumber   String
  price         Float
  typeOfCarWash String
  observations  String?
  washed        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([licensePlate])
}
